@model WebApplication.Models.ProductViewModel
@*@{
        Layout = null;
    }*@

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Model.Title</title>
</head>
<body>
    <div id="rootBlockDetails" style="display:block; color:white;">
        <!--IMAGES BLOCK-->
        <div id="imageBlock" class="detailBlock" style="width:19%;text-align:center;background:white;">

            <img id="mainImageProduct" src=@Model.Images[0].Url style="max-width:100%;border-bottom:3px solid #e9eaff;" />

            <div style="text-align:left;">
               


                @foreach (var item in Model.Images)
                {
                    <a href=@item.Url data-fancybox="gallery" class="noneDecoration">
                        <img src=@item.Url class="smallPhotoes">
                    </a>
                }
            </div>
        </div>
        <!--DESCRIPTION BLOCK-->
        <div id="infoBlock" class="detailBlock" style="width:60%;">
            <span class="titleBlock">@Model.Title</span>
            @foreach (var item in Model.Parameters)
            {
                <div class="descriptionBlock">@item</div>
            }

            <span class="descriptionBlock">@Model.Description</span>
        </div>
        <!--PRICE BLOCK-->
        <div id="controlBlock" class="detailBlock" style="width:20%;text-align:center;border-left:1px solid #c3c4d7;">
            <div id="priceProduct">
                <div id="priceBlock" style="color: #e87619;"><label style="font-size:40px;">@Model.Price</label><label style="font-size:24px;padding-left:10px;">грн</label></div>
                <div id="priceComment" style="color:#6c7096;font-size:14px;">доставка в Украину <br /> 2-5 дней</div>
                <div id="buyBtn" style="margin: 57px 0px 0px 0px">
                    <form action="@Url.Action("CartView")">
                        <button class="btnBuy">

                            <img src="~/images/Buy.png" />
                            <span>Купить</span>
                        </button>
                    </form>
                </div>
                <div id="continueBtn" style="margin: 10px 0px 0px 0px;display:none;">
                    <input type="submit" id="btnContinueBuys" value="Продолжить покупки" />
                </div>
            </div>
        </div>
    </div>
    <!--FOOTER BLOCK-->
    <div id="footerBlockDetails" style="background:#eeefff;height:120px;text-align:center;display:none;">
        <div style="position:relative;top:30%;">
            <input type="submit" id="btnCloseDetailWindow" value="Закрыть" />
        </div>

    </div>
</body>
</html>

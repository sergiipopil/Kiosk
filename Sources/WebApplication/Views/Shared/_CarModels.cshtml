@model WebApplication.Models.RightTreeViewModel;
@{
    Layout = null;
}

<div class="mainBlockTitle" id="divTreeTitle" style="background: #EEEFFF;">
    <div onclick="back('@Model.TopCategoryId')" style="color: white; padding: 0px 10px; font-weight: normal; display: inline-block; border-radius: 10px; font-size: 23px; float: left; text-transform: capitalize; background: #ff5a00;">
        <span>Назад</span>
    </div>
    <div style="display:inline-block;">
        @if (!Model.IsModificationList)
        {
        <span>Выберите модель автомобиля</span>}
        else
        {
        <span>Выберите модификацию автомобиля</span>
        }
    </div>
</div>
<div style="padding: 10px 0px 10px 20px;">
    @foreach (var item in Model.ModelsList)
    {
    <div style="display:inline-block;vertical-align:middle;">
        @if (!Model.IsModificationList)
        {
            @if (item.Children == null)
                {
                    <div class="parentDiv" style="display:grid;" onclick="selectCarModel('@Model.ManufacturerSelected', '@item.Name')">
                        <div style="min-width:155px;min-height:115px;text-align:center;">
                            <img src="@String.Format("/images/Catalog/CarModel/{0}/{1}.png", Model.ManufacturerSelected, @item.Name)" class="modelImage" />
                        </div>
                        <div class="manufactureText">
                            <span>@item.Name</span>
                        </div>
                    </div>
                }
            else
            {
                <div class="parentDiv" style="display:grid;" onclick="selectCarModifications('@Model.ManufacturerSelected', '@item.Name')">
                    <div style="min-width:155px;min-height:115px;text-align:center;">
                        <img src="@String.Format("/images/Catalog/CarModel/{0}/{1}.png", Model.ManufacturerSelected, @item.Name)" class="modelImage" />
                    </div>
                    <div class="manufactureText">
                        <span>@item.Name</span>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="parentDiv" style="display:grid;" onclick="selectCarModel('@Model.ManufacturerSelected', '@item.Name')">
                <div style="min-width:155px;min-height:115px;text-align:center;">
                    <img src='@item.Path' class="modelImage" />
                </div>
                <div class="manufactureText">
                    <span>@item.DisplayName</span>
                </div>
            </div>
        }
    </div>
    }
</div>
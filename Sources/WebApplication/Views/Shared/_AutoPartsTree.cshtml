@model WebApplication.Models.RightTreeViewModel;
@{
    Layout = null;
}

@if (!String.IsNullOrEmpty(@Model.ManufacturerSelected))
{
    <meta name="description" content="Купити запчастини
      @Model.ManufacturerSelected @Model.ModelSelected" />
}
<div class="mainBlockTitle" id="divTreeTitle" style="background: #EEEFFF;">
    <div onclick="selectManufacturer('@Model.ManufacturerSelected', '@Model.kioskId', '@Model.TopCategoryId')" class="btnBackModelPage">
        <span>Назад</span>
    </div>
    @if (@Model.ManufacturerSelected != null && @Model.ModelSelected != null)
    {
        <div style="display:inline-block;"><h1 class="controlHeader"><span class="notranslate">Купити запчастини @Model.ManufacturerSelected @Model.ModelSelected</span></h1></div>
    }
    else
    {
        <div style="display:inline-block;"><h1 class="controlHeader"><span class="notranslate">@Model.TopCategoryName</span></h1></div>
    }
</div>
<div style="padding: 10px 10px 10px 10px;text-align:center;">
    @if (@Model.ManufacturerSelected != null)
    {
        @foreach (var item in Model.ProductCategoryList)
        {
            @if (@item.Name.FirstOrDefault().Value != "Збірні деталі" && @item.Name.FirstOrDefault().Value != "Інші" && @item.Name.FirstOrDefault().Value != "Інше" && @item.Name.FirstOrDefault().Value != "Фільтри")
            {
                <div style="display:inline-block;vertical-align:middle;" class="@String.Format("{0}", @item.CategoryId == "GROUP-49236" ? "disabledBlock" : "")">
                    @*<a href="/topcategory/@Model.TopCategoryId/@Model.ManufacturerSelected.Replace(" ", "-")/@Model.ModelSelected.Replace(" ", "-")/@item.CategoryId/@item.Name.FirstOrDefault().Value.Replace(" ", "-")">*@
                    <div class="parentDivAutoParts" style="display:grid;" onclick="selectMainCategory('@Model.ManufacturerSelected', '@Model.ModelSelected', '@item.CategoryId', '@item.Name.FirstOrDefault().Value', '@Model.kioskId', '@Model.TopCategoryId')">
                        <div class="divCarModelsBlock">
                            <img src="@String.Format("/images/Catalog/AutoParts/{0}.png", Model.ReallyTopCategoryId == "621" && @item.CategoryId == "GROUP-4094" ? "Truck/" + item.CategoryId : item.CategoryId)" class="modelImageAutoParts" />
                        </div>
                        <div class="manufactureText">
                            <span class="notranslate">@item.Name.FirstOrDefault().Value</span>
                        </div>
                    </div>
                    @*</a>*@
                </div>
            }
        }}
    else
    {
        @foreach (var item in Model.ProductCategoryList)
        {
            @if (@item.Name.FirstOrDefault().Value != "Збірні деталі" && @item.Name.FirstOrDefault().Value != "Інші" && @item.Name.FirstOrDefault().Value != "Інше" && @item.Name.FirstOrDefault().Value != "Фільтри")
            {
                <div style="display:inline-block;vertical-align:middle;">
                    @*<a href="/topcategory/@Model.TopCategoryId/@item.CategoryId/@item.Name.FirstOrDefault().Value.Replace(" ", "-")">*@
                    <div class="parentDivAutoParts" style="display:grid;" onclick="selectMainCategory('@Model.ManufacturerSelected', '@Model.ModelSelected', '@item.CategoryId', '@item.Name.FirstOrDefault().Value.Replace(" ", "-")', '@Model.kioskId', '@Model.TopCategoryId')">
                        @*onclick="selectMainCategory('@Model.ManufacturerSelected', '@Model.ModelSelected', '@item.CategoryId', '@item.Name.FirstOrDefault().Value', '@Model.kioskId', '@Model.TopCategoryId')"*@
                        <div class="divCarModelsBlock">
                            <img src="@String.Format("/images/Catalog/AutoParts/{0}.png", Model.ReallyTopCategoryId == "621" && @item.CategoryId == "GROUP-4094" ? "Truck/" + item.CategoryId : item.CategoryId)" class="modelImageAutoParts" />
                        </div>
                        <div class="manufactureText">
                            <span class="notranslate">@item.Name.FirstOrDefault().Value</span>
                        </div>
                    </div>
                    @*</a>*@
                </div>
                }
            }
        }
    </div>

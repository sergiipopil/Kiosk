<script type="text/javascript">
    function ReturnToCart() {
        window.location.href = '/Product/CartView/'
    }
    function ReturnToDelivery() {
        window.location.href = '/Product/Delivery/'
    }
</script>
@if (@ViewData["CartWidgetPrice"] == null) { 
<div id="cartWidgetEmpty">
    <div>Ваша корзина пуста</div>
    <img src="~/images/Cart/CartWidgetEmptyBig.png" />
</div>
}
else {
<div id="cartWidgetValue">
    <div onclick="ReturnToCart()">
        Переглянути
    </div>
    <div>
        <span id="cartWidgetPrice">@ViewData["CartWidgetPrice"]</span> грн.
    </div>
</div>
}
    

@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div style="padding:10% 20% 0% 20%;">
    <h1 class="text-danger" style="color:white;text-align:center;">Запрашиваемая страница не найдена!</h1>
    <h3 style="color:white;text-align:center;">К сожалению, запрашиваемая Вами страница не найдена. Вероятно, Вы указали несуществующий адрес, страница была удалена, перемещена или сейчас она временно недоступна!</h3>
    <div id="continueBtn" style="width:100%;">
        <div onclick="backToMainPage()">
            <button class="btnBuyNew">
                <span class="btnBuyListSpan" style="font-size:23px;">Продолжить покупки</span>
            </button>
        </div>

    </div>

<UserControl x:Class="KioskApp.Ek.Catalog.AutoParts.Europe.EuropeSearchLeftView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:filters="using:KioskApp.Ek.Filters"
             xmlns:keyboards="using:KioskApp.Controls.Keyboards"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400"
             Loaded="EuropeSearchLeftView_OnLoaded"
             Unloaded="EuropeSearchLeftView_OnUnloaded">
    <Grid x:Name="searchAndKeybord">
        <filters:SearchInput SearchProvider="{x:Bind SearchProvider, Mode=OneWay}"
                             KeyboardLayoutProvider="{x:Bind KeyboardLayoutProvider, Mode=OneTime}"
                             Instruction="{x:Bind SearchInputInstruction, Mode=OneWay}"
                             Width="870"
                             Margin="-181 0 -86 52"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Right" />
    </Grid>
</UserControl>